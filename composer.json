{
    "name": "idci/step-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 bundle that provides a step system in order to represent an highly customisable workflow",
    "keywords": ["step","workflow","flow","form","path"],
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Bondaz",
            "email": "gabriel.bondaz@idci-consulting.fr",
            "homepage": "http://www.idci-consulting.fr"
        }
    ],
    "require": {
        "php": "^7.2",
        "idci/extra-form-bundle": "~4.0",
        "jms/serializer-bundle": ">=1.0",
        "symfony/config": "^3.3|^4.0",
        "symfony/dependency-injection": "^3.3|^4.0",
        "symfony/event-dispatcher": "^3.3|^4.0",
        "symfony/form": "^3.3|^4.0",
        "symfony/http-foundation": "^3.3|^4.0",
        "symfony/http-kernel": "^3.3|^4.0",
        "symfony/options-resolver": "^3.3|^4.0",
        "symfony/security": "^3.3|^4.0",
        "symfony/yaml": "^3.3|^4.0",
        "twig/extensions": "~1.0",
        "twig/twig": "~1.0|^2.0"
    },
    "suggest": {
        "idci/extra-form-bundle": "Allow to use a powerful configuration for forms"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "symfony/framework-bundle": "^3.4|^4.0",
        "symfony/security-bundle": "^3.4|^4.0",
        "symfony/twig-bundle": "^3.4|^4.0"
    },
    "autoload": {
        "psr-4": {
            "IDCI\\Bundle\\StepBundle\\": ""
        }
    }
}
